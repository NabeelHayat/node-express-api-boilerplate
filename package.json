{
  "name": "node-express-api-boilerplate",
  "version": "1.0.0",
  "description": "A boilerplate for building RESTful APIs in Node.js using express, mongoose, and includes API design, authentication, and deployment.",
  "main": "src/server.js",
  "repository": "https://github.com/NabeelHayat/node-express-api-boilerplate.git",
  "author": "Nabeel Hayat <nabeel.hayat87@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "yarn prod",
    "build": "npm-run-all clean transpile",
    "server": "node ./dist/server.js",
    "dev": "NODE_ENV=development npm-run-all build server",
    "prod": "NODE_ENV=production npm-run-all build server",
    "transpile": "babel ./src --out-dir dist",
    "clean": "rimraf dist",
    "watch:dev": "nodemon"
  },
  "dependencies": {
    "express": "^4.17.2",
    "http": "^0.0.1-security"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.7",
    "@babel/core": "^7.16.7",
    "@babel/preset-env": "^7.16.7",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2"
  },
  "nodemonConfig": {
    "exec": "yarn dev",
    "watch": [
      "src/*",
      "public/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js"
    ]
  }
}
