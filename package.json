{
  "name": "node-express-api-boilerplate",
  "version": "1.0.0",
  "description": "A boilerplate for building RESTful APIs in Node.js using express, mongoose, and includes API design, authentication, and deployment.",
  "repository": "https://github.com/NabeelHayat/node-express-api-boilerplate.git",
  "author": "Nabeel Hayat <nabeel.hayat87@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "yarn prod",
    "dev": "NODE_ENV=development ./node_modules/nodemon/bin/nodemon.js  src/index.js",
    "prod": "NODE_ENV=production node src/index.js",
    "watch:dev": "nodemon",
    "prepare": "husky install",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "prettier": "prettier --write **/*.{js,json,yml,md}"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md,yml,yml,json}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "bluebird": "^3.7.2",
    "compression": "^1.7.4",
    "config": "^3.3.7",
    "connect-mongo": "^4.6.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.2",
    "express-rate-limit": "^6.1.0",
    "express-session": "^1.17.2",
    "express-validation": "^3.0.8",
    "helmet": "^5.0.1",
    "http-status": "^1.5.0",
    "joi": "^17.5.0",
    "lodash": "^4.17.21",
    "mongoose": "^6.1.4",
    "morgan": "^1.10.0",
    "nanoid": "^3.3.1",
    "passport": "^0.5.2",
    "passport-jwt": "^4.0.0",
    "passport-local-mongoose": "^6.1.0",
    "swagger-jsdoc": "^6.1.0",
    "swagger-ui-dist": "^4.1.3",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "eslint": "^8.6.0",
    "eslint-config-leapfrog": "^3.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jsdoc": "^37.6.1",
    "eslint-plugin-node": "^11.1.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.7",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1"
  },
  "engines": {
    "node": ">= 14.18.1",
    "npm": ">= 6.14.15",
    "yarn": ">= 1.22.15"
  }
}
